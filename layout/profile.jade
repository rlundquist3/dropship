doctype html
html(lang='en')
    head
        title index
        
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
        link(rel='stylesheet', href='css/jquery.dataTables.min.css')
        
        script(src='js/jquery-1.11.3.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
        script(src='/socket.io/socket.io.js')
        script(src='js/jquery.dataTables.min.js')
        script(src="js/profile.js")
    
    body
        .container
            nav.navbar.navbar-default.navbar-fixed-top
                .container
                    a.navbar-brand(href='/') Cool name & logo
                    p.navbar-text.navbar-right #{company_name}
            br
            br
            br
            row
                .col-md-1 partner request from 
                    p.request_company #{request_company}
                .col-md-1 
                    button.btn.btn-default.partner-confirm-button partner
                .col-md-1 
                    button.btn.btn-default.partner-confirm-button reject
            br
            row
                ul.nav.nav-tabs(role='tablist')
                    li.active(role='presentation')
                        a(href='#products', data-toggle='tab') Products
                    li(role='presentation')
                        a(href='#inventory', data-toggle='tab') Inventory
                    li(role='presentation')
                        a(href='#orders', data-toggle='tab') Orders
                    li(role='presentation')
                        a(href='#partners', data-toggle='tab') Partners
                    li(role='presentation')
                        a(href='#profile', data-toggle='tab') Profile
                .tab-content
                    .tab-pane.fade.in.active#products product data loading...
                    .tab-pane.fade#inventory inventory data loading...
                    .tab-pane.fade#orders order data loading...
                    .tab-pane.fade#partners partner data loading...
                    .tab-pane.fade#profile profile loading...
